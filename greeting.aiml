<aiml version="1.0">
    <category>
        <pattern>HEY</pattern>
        <template>
            <condition name="greeted" value="TRUE">
                Wir haben doch heute schon gesprochen oder nicht?
            </condition>
            <condition name="greeted" value="FALSE">
                ||USERNAME|| ? <think><set name="greeted">FALSE</set></think>
            </condition>
        </template>
    </category>
    
    <category>
        <pattern>Hallo</pattern>
        <template>
          <condition name="greeted" value="TRUE">
                Wir haben doch heute schon gesprochen oder nicht?
            </condition>
            <condition name="greeted" value="FALSE">
                ||USERNAME|| ? <think><set name="greeted">FALSE</set></think>
            </condition>        
        </template>
    </category>
    
    <category>
        <pattern>JA</pattern>
        <that>Wir haben doch heute schon gesprochen oder nicht?</that>
        <template>
            Wusste ich doch, dass ich mich an dich errinnere.<think><set name="topic">test</set></think>
        </template>
    </category>
    
    <topic name="test">
        <category>
            <pattern> _ </pattern>
            <that>Wusste ich doch, dass ich mich an dich errinnere.</that>
            <template>
                Worueber moechtest du reden?
            </template>
        </category>

        <category>
            <pattern> * </pattern>
            <that>Wusste ich doch, dass ich mich an dich errinnere.</that>
            <template>
                Worueber moechtest du reden?
            </template>
        </category>
    </topic>
</aiml>
